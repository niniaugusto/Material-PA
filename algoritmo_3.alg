algoritmo "Maior ou menor de idade"
// Autor : Nicolas Augusto da Silva
// Data : 02/06/2023

var
nome: caractere
idade: real

inicio
escreval ("digite seu nome: ")
leia (nome)
escreval ("digite sua idade: ")
leia (idade)
se idade >= 18 entao
escreval ("",nome," maior de idade")
senao
escreval ("",nome," menor de idade")
fimse


escreval ("acabou")


fimalgoritmo
